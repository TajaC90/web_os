<% content_for :email do %>
  <%= form_for :emails, :url=>{ :controller=>"emails", :action =>"create", :id=>session[:user_id]}, :method=>:post, :remote=>true  do |f| %>
    <%= f.label "To:", :class=> "email_label" %>
    <%= f.text_field :email, :class=> "email_field", :id=> "email_content"  %><br>
    <%= f.label "Subject:", :class=>"email_label"%>
    <%= f.text_field :subject, :class=> "email_field", :id=>"subject_content" %><br>
    <%= f.text_area :body, :id=>"body_content" %></br>
    <%= f.submit "Send", :id=>"email_button"  %>
  <% end %>
<% end %>
